<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="3dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp">

        <TextView
            android:id="@+id/repo_full_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="xml2208/forage" />

        <TextView
            android:id="@+id/description_repo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="a dolphin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/star_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2543"
                app:drawableStartCompat="@drawable/ic_star" />

            <TextView
                android:id="@+id/branch_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_branch"
                tools:text="3445" />

            <TextView
                android:id="@+id/repo_fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xml2208/forage"
                app:drawableStartCompat="@drawable/ic_star" />

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="kotlin"
                android:textColor="@color/blue" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>